<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/register_tckimlik"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Tc Kimlik"
        android:inputType="numberDecimal"
        android:maxLength="11"
        android:text="65239212594"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />
    

    <EditText
        android:id="@+id/register_sicilNo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:ems="10"
        android:hint="Sicil Numarası"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:text="0000067335"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text="Aa12345"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/register_replaypassword"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:ems="10"
        android:hint="@string/tekrar_password"
        android:inputType="textPassword"
        android:text="Aa12345"
        android:textAlignment="center"
        tools:ignore="TextFields" />


    <info.hoang8f.widget.FButton
        android:id="@+id/register_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Kayıt ol"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        fbutton:buttonColor="@color/colorBlueAcik"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        tools:ignore="HardcodedText" />

    <info.hoang8f.widget.FButton
        android:id="@+id/register_cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-50dp"
        android:text="Cık"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        fbutton:buttonColor="@color/colorBlueAcik"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        tools:ignore="HardcodedText" />


</LinearLayout>